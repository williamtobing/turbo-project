{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@turbo/gen": "^1.10.12",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "turbo": "^1.10.12"
  },
  "lint-staged": {
    "apps/next-mobile/**/*.{ts,tsx}": [
      "turbo run lint --",
      "turbo run format -- -w"
    ],
    "apps/**/*.{json,css,sass,scss,md}": [
      "turbo run format -- -w"
    ],
    "*.{json,md}": [
      "turbo run format -- -w"
    ]
  },
  "packageManager": "pnpm@8.6.12"
}
